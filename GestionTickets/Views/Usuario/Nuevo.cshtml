@model Usuario
@{
    ViewBag.Title = "Nuevo";
    Layout = "~/Views/Shared/_LayoutUsuario.cshtml";
}

<h2>
    <a style="float: right; color: blue" href="@Url.Action("Index","Usuario")"><i class="fas fa-arrow-alt-circle-left"></i></a>
    Nuevo Usuario
</h2>

@using (Html.BeginForm("Nuevo", "Usuario", FormMethod.Post, new { @class = "form-control" }))
{
    <div class="form-group">
        <label>Id Usuario</label><br />
        @Html.EditorFor(d => d.Id, null, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Id, null , new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <label>Nombre</label><br />
        @Html.TextBoxFor(d => d.Nombre, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Nombre, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Apellido</label><br />
        @Html.TextBoxFor(d => d.Apellido, null, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Apellido, null, new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <label>Telefono</label><br />
        @Html.EditorFor(d => d.Telefono, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Telefono, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label>Email</label><br />
        @Html.EditorFor(d => d.Email, null, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Email, null, new { @class = "text-danger" })
    </div>


    <div class="form-group">
        <label>Activo</label><br />
        @Html.EditorFor(d => d.Activo, new { @class = "form-control", @required = "required" })
        @Html.ValidationMessageFor(d => d.Activo, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-success" />
    </div>
}




